{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es6"],  
    "module": "commonjs", 
    "rootDir": "./src",
    "outDir": "./lib",    
    "esModuleInterop": true,           
    "forceConsistentCasingInFileNames": true,            
    "strict": true,  
    "noImplicitAny": true,
    "skipLibCheck": true  
  },
  "exclude": ["node_modules", "example", "**/*.test.ts"],
}
